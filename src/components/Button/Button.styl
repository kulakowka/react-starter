@import '../pallete.styl'

.root 
  appearance none
  background rgba(0,0,0,0.1)
  border 0
  border-radius 0.5rem
  color rgba(0,0,0,0.7)
  cursor pointer
  font-size 1rem
  font-weight 500
  line-height 24px
  padding 0.8rem 2rem
  transition 0.2s
  display inline-block
  // &:hover
  //   background rgba(0,0,0,0.05)
  //   color rgba(0,0,0,0.9)
  //   box-shadow 0px 0px 3px 0px rgba(0,0,0,0.3)
  // &:active
  //   background rgba(0,0,0,0.15)
  //   color rgba(0,0,0,0.9)
  //   box-shadow inset 0px 0px 3px 0px rgba(0,0,0,0.2)
  &:focus
    outline none 
    // box-shadow 0px 0px 5px 0px rgba(0,0,0,0.3)
.root svg 
  display inline-block
  vertical-align middle
  margin-right 0.5rem
  
    
.root + .root 
  margin-left 1rem

.negative
  background-color RADICAL_RED
  color WHITE_SMOKE
.positive
  background-color MAXIMUM_BLUE_GREEN
  color WHITE_SMOKE
.primary
  background-color DODGER_BLUE
  color WHITE_SMOKE